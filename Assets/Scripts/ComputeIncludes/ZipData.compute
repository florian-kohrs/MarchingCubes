int zipInFront(int newFront, int oldInt)
{
	return (newFront << 24) + oldInt;
}

int zipData(int x, int y, int z, int w) {
	return (x << 24) + (y << 16) + (z << 8) + w;
}

int3 unzipData3(int data)
{
	return int3(data >> 24,
		(data >> 8) << 24,
		(data >> 16) << 24);
}

int4 unzipData(int data)
{
	return int4(data >> 24,
		(data >> 8) << 24,
		(data >> 16) << 24,
		(data >> 24) << 24);
}
